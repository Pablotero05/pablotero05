---
import { Image } from 'astro:assets';
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import Meloso from "../assets/Meloso.png";
import Banana from "../assets/Banana.png";
import OSPA from "../assets/OSPA.png";

const projects = [
     {
          title: "Meloso Brunch",
          description: "Web moderna y amigable para Melosobrunch Brunch & Coffee con chatbot vectorial integrado",
          image: Meloso
     },
     {
          title: "Banana Verde",
          description: "Web moderna, colorida y responsive para el chiringuito Banana Verde",
          image: Banana
     },
     {
          title: "O'SPA",
          description: "Web moderna inspirada en el sector cinematogr√°fico para el local O'SPA",
          image: OSPA
     }];
---

<InfoLayout>
  <div class="p-2 sm:pt-8 sm:px-4 pb-20 min-h-dvh">
    <H1> Proyectos </H1>

    <ul class="mt-8 sm:mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 xl:gap-12 mx-auto max-w-7xl">
      {projects.map((project) => (
        <li class="w-full">
          <a class="group block hover:scale-[1.02] hover:shadow-2xl hover:shadow-blue-500/50 transition-all duration-500 hover:-translate-y-4 hover:bg-gradient-to-br from-blue-900/40 to-indigo-900/40 rounded-3xl p-12 border-2 border-blue-500/30 hover:border-blue-300 h-[36rem] mx-auto max-w-sm">
            <div class="flex flex-col h-full">
              <div class="flex-shrink-0 mb-10">
                <img 
                  src={project.image.src} 
                  alt={project.title} 
                  width={project.image.width}
                  height={project.image.height}
                  class="w-full h-[18rem] aspect-square object-cover rounded-2xl shadow-2xl ring-4 ring-blue-500/20"
                />
              </div>
              <div class="flex-1 flex flex-col justify-end px-4 pb-6">
                <h2 class="text-3xl text-zinc-50 font-black mb-4 drop-shadow-lg">{project.title}</h2>
                <p class="text-xl text-zinc-200 leading-relaxed drop-shadow-md">{project.description}</p>
              </div>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </div>
</InfoLayout>


